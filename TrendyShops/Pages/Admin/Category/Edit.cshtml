@model TrendyShops.Pages.Admin.Category.EditModel

@{
    Layout = "~/Pages/Shared/_Layout2.cshtml";
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Category</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form method="post">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category.Id" />
                
                <div class="card-body">
                  <div class="form-group">
                   <label asp-for="Category.Name" class="control-label"></label>
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
                 </div>
              
                  <div class="form-check">
                     
                    <input type="checkbox" class="form-check-input" asp-for="Category.Status">
                    <label class="form-check-label">@Html.DisplayNameFor(model => model.Category.Status)</label>
                  </div>
                </div>
                <!-- /.card-body -->

                <div class="form-group" style="padding-left: 35px;">
                  <button type="submit" class="btn bg-gradient-success">Submit</button>
                </div>
              </form>
            </div>
       
    </div>
</div>

<div >
    <a asp-page="Index" class="btn btn-primary">Back to List</a>
</div>


