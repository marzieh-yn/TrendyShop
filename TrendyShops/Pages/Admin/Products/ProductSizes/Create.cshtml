@page
@model TrendyShops.Pages.Admin.Products.ProductSizes.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout2.cshtml";
}

<h2>Create</h2>

<h4>ProductSizes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductSizes.ProductId" class="control-label"></label>
                <select asp-for="ProductSizes.ProductId" class ="form-control" asp-items="ViewBag.ProductId">
                    <option disabled selected>-Select Product</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ProductSizes.Size" class="control-label"></label>
                <input asp-for="ProductSizes.Size" class="form-control" />
                <span asp-validation-for="ProductSizes.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ProductSizes.Status" /> @Html.DisplayNameFor(model => model.ProductSizes.Status)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
