@page
@model TrendyShops.Pages.Admin.Products.ProductColors.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout2.cshtml";
}

<h2>Edit</h2>

<h4>ProductColors</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductColors.Id" />
            <div class="form-group">
                <label asp-for="ProductColors.ProductId" class="control-label"></label>
                <select asp-for="ProductColors.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="ProductColors.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductColors.Color" class="control-label"></label>
                <input asp-for="ProductColors.Color" class="form-control" />
                <span asp-validation-for="ProductColors.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ProductColors.Status" /> @Html.DisplayNameFor(model => model.ProductColors.Status)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
