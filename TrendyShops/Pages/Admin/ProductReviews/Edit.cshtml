@page
@model TrendyShops.Pages.Admin.ProductReviews.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout2.cshtml";
}

<h2>Edit</h2>

<h4>ProductReviews</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductReviews.Id" />
            <div class="form-group">
                <label asp-for="ProductReviews.ProductId" class="control-label"></label>
                <input asp-for="ProductReviews.ProductId" class="form-control" />
                <span asp-validation-for="ProductReviews.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductReviews.Name" class="control-label"></label>
                <input asp-for="ProductReviews.Name" class="form-control" />
                <span asp-validation-for="ProductReviews.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductReviews.UserId" class="control-label"></label>
                <input asp-for="ProductReviews.UserId" class="form-control" />
                <span asp-validation-for="ProductReviews.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductReviews.ReviewDescription" class="control-label"></label>
                <input asp-for="ProductReviews.ReviewDescription" class="form-control" />
                <span asp-validation-for="ProductReviews.ReviewDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ProductReviews.Status" /> @Html.DisplayNameFor(model => model.ProductReviews.Status)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ProductReviews.Created_Date" class="control-label"></label>
                <input asp-for="ProductReviews.Created_Date" class="form-control" />
                <span asp-validation-for="ProductReviews.Created_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
